<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div>
  <% @repos.each do |repo| %>
    <ul>
      <li>
        <%= repo.name %>
        <%= repo.description %>
      </li>
      
    </ul>
</div>

